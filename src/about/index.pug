extends ../_component/layout/layout

block config
  -
    var metaTitle = 'About Us'
    var metaDescription = 'About Profesional Mastic Applier'
    var showBackButton = baseUrl

block content
  .column(span="row")
    .about

  .column(span="row" height="30")
  .column(span="row")
    h2.sub-title About us

  .column(span="row" height="30-hr")
  .column(span="row")
    each more in data.about.descriptionList
      each moreValue in more.contentList
        p.description-text=moreValue

  
  .column(span="row")
  each list in data.about.unorderedList
    .column(span="row")
        .list-title=list.title
          each listValue in list.listItem
            .column(span="row")
              ul
                li.description-text=listValue
